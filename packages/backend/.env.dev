# Environment Variables for Local Development
# JWT Configuration
JWT_SECRET=dev-local-secret
JWT_EXPIRES_IN=7d

# AWS Configuration
AWS_REGION=ap-south-1
STAGE=dev
NODE_ENV=development

# Database Tables (auto-generated by serverless)
JOBS_TABLE=spec-gen-ai-dev-jobs-dev
USERS_TABLE=spec-gen-ai-dev-users-dev
PROMPTS_TABLE=spec-gen-ai-dev-prompts-dev

# S3 Configuration
S3_BUCKET=spec-gen-ai-dev-outputs-dev

# Step Functions (not used in local development)
STATE_MACHINE_ARN=

# Bedrock Configuration (will be mocked for local development)
BEDROCK_MODEL_ID=apac.amazon.nova-pro-v1:0

# Feature Flags
ENABLE_RATE_LIMIT=false
ENABLE_METRICS=true
DEBUG_MODE=true

# CORS Origins (for local frontend)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Local development flag
USE_MOCK_SERVICES=false